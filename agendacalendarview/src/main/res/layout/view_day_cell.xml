<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="0dip"
    android:layout_height="@dimen/day_cell_height"
    android:layout_weight="1"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/view_day_month_label"
        style="@style/CalendarCellText"
        android:visibility="gone" />

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <View
            android:id="@+id/view_day_circle_selected"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@drawable/event_color_circle"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/view_day_day_label"
            android:layout_gravity="center"
            style="@style/CalendarCellText"/>


    </FrameLayout>



    <LinearLayout
        android:id="@+id/container_bolinhas_evento"
        android:layout_marginTop="3dp"
        android:layout_width="15dp"
        android:layout_height="4dp"
        android:orientation="horizontal"

        android:gravity="center">


        <ImageView
            android:id="@+id/cell_event_prova"
            android:layout_width="4dp"
            android:layout_height="4dp"
            android:visibility="gone"
            android:scaleType="fitCenter"
            android:layout_marginLeft="1dp"/>

        <ImageView
            android:id="@+id/cell_event_aula"
            android:layout_width="4dp"
            android:layout_height="4dp"
            android:visibility="gone"
            android:scaleType="fitCenter"
            android:layout_marginLeft="1dp"/>

        <ImageView
            android:id="@+id/cell_event_tarefa"
            android:layout_width="4dp"
            android:layout_height="4dp"
            android:visibility="gone"
            android:scaleType="fitCenter"
            android:layout_marginLeft="1dp"/>

    </LinearLayout>

</LinearLayout>